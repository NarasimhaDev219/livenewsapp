<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/item_layout_id"
    android:background="@drawable/source_item_background"
    android:paddingVertical="5dp"
    android:layout_marginVertical="5dp"
    android:layout_marginHorizontal="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/name_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/headland_title"
        android:text="Name"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold" />

    <LinearLayout
        android:paddingVertical="10dp"
        android:paddingHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/category_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sumana_language"
                android:text="category"
                android:textColor="@color/white"
                android:textSize="13dp"
                android:textStyle="bold" />

        <TextView
            android:id="@+id/country_id"
            android:textSize="13dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/sumana_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="category"/>
        </LinearLayout>

        <TextView
            android:id="@+id/language_id"
            android:textSize="13dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:fontFamily="@font/sumana_language"
            android:textColor="@color/white"
            android:textAlignment="textEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Language"/>

    </LinearLayout>

    <TextView
        android:id="@+id/description_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/average_description"
        android:lines="3"
        android:paddingHorizontal="10dp"
        android:paddingBottom="5dp"
        android:text="Description"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="15dp" />

</LinearLayout>